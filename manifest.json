{
  "manifest_version": 3,
  "name": "tamataski",
  "version": "1.0",
  "description": "",

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background" : {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "assets/cat-idle.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/pet.js"],
      "css": ["assets/style.css"],
      "matches": ["*://*/*"]
    },
    {
      "js": ["shop/shop.js"],
      "css": ["shop/shop.css"],
      "matches": ["*://*/*"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["*://*/*"]
    }
  ]
}