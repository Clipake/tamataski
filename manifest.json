{
  "manifest_version": 3,
  "name": "TamaTaski",
  "version": "1.0",
  "description": "Pet shop popup test",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "shop/shop.html",
    "default_icon": {
      "16": "assets/cat-idle.png",
      "48": "assets/cat-idle.png",
      "128": "assets/cat-idle.png"
    }
  },


  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "content_scripts": [
    {
      "js": ["scripts/pet.js"],
      "css": ["assets/style.css"],
      "matches": ["*://*/*"]
    },
    {
      "js": ["shop/shop.js"],
      "css": ["shop/shop.css"],
      "matches": ["*://*/*"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
