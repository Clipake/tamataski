{
    "manifest_version": 3,
    "name": "tamataski",
    "version": "1.0",
    "description": "",

    "permissions": [
        "activeTab",
        "storage"
    ],
    "background" : {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "assets/smile_0.png"
    }, 
    
    "content_scripts": [
        {
            "js": ["scripts/pet.js"],
            "css": ["assets/style.css"],
            "matches": ["*://*/*"]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["/assets/*"],
            "matches": ["*://*/*"]
        }
    ]
}